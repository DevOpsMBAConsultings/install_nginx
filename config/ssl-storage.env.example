# SSL certificate storage (for existing Odoo + Nginx)
# Copy to .env or export before running install_nginx.sh / scripts/install_nginx_ssl.sh
#
# --- Option A: Cloudflare R2 (S3-compatible) ---
export ODOO_SSL_STORAGE=s3
export ODOO_SSL_S3_BUCKET=odoo-ssl-certs
export ODOO_SSL_S3_PREFIX=odoo-ssl
export ODOO_SSL_S3_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
export AWS_ACCESS_KEY_ID=your_r2_access_key_id
export AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key
#
# --- Option B: URL (restore / backup) ---
# export ODOO_SSL_STORAGE=url
# export ODOO_SSL_RESTORE_URL=https://your-storage.example.com/ssl/your-domain/cert.tar.gz
# export ODOO_SSL_BACKUP_URL=https://your-upload-endpoint.example.com/ssl/your-domain/cert.tar.gz
# export ODOO_SSL_BACKUP_TOKEN=optional_bearer_token
#
# --- Unset = local store only ---
